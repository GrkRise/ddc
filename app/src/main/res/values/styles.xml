<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!-- Base application theme. -->


    <style name="actionBar" parent="@style/Theme.AppCompat">
        <!-- Customize your theme here. -->
        <item name="android:actionBarStyle">@style/MyActionBar</item>
        <item name="actionBarStyle">@style/MyActionBar</item>
    </style>



    <style name="MyActionBar" parent="@style/Widget.AppCompat.ActionBar">
        <item name="android:titleTextStyle">@style/barStyleText</item>
        <item name="titleTextStyle">@style/barStyleText</item>
        <item name="android:background">@color/main</item>
        <item name="background">@color/main</item>
    </style>

    <style name="barStyleText" parent="@style/TextAppearance.AppCompat.Widget.ActionBar.Title">
        <item name="android:textColor">@color/main_text</item>
    </style>







</resources>
